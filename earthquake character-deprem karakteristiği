#include <stdio.h>
#include <stdlib.h>

//Depremin büyüklüğüne göre deprem karakteristiğini görüntüleyen program.
//A program that displays earthquake characteristics according to the magnitude of the earthquake.

int main()
{
    float n;
    printf("Enter Righter: ");
    scanf("%f",&n);
    printf("\nN: %f ",n);

    if(n>0 && n<5.0){
            printf("\t Small or undamaged");
    }
    else if(n>=5.0 && n<5.5){
        printf("\t Slightly damaged");
    }
    else if(n>=5.5 && n<6.5){
        printf("\t Seriously damaged");
    }
    else if(n>=6.5 && n<7.5){
        printf("\t Disaster: Houses and buildings may collapse !");
    }
    else if(n>=7.5){
        printf("\t Disaster: All structures can be destroyed !!");
    }
    return 0;
}
